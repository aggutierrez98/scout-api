generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./scout.db"
}

model User {
  id       Int     @id @default(autoincrement())
  uuid     String  @unique
  username String  @unique
  password String
  role     String  @default("EXTERNO")
  active   Boolean @default(true)
  scout    Scout?  @relation(fields: [scoutId], references: [uuid])
  scoutId  String? @unique
}

model Scout {
  id                    Int                   @id @default(autoincrement())
  uuid                  String                @unique
  nombre                String
  apellido              String
  fechaNacimiento       DateTime
  dni                   String                @unique
  sexo                  String
  localidad             String
  direccion             String
  telefono              String?
  nacionalidad          String?
  provincia             String?
  mail                  String?
  progresionActual      String?
  religion              String?               @default("CATOLICA")
  rama                  String?               @default("CASTORES")
  equipo                Equipo?               @relation(fields: [equipoId], references: [uuid])
  equipoId              String?
  funcion               String?               @default("JOVEN")
  estado                String?               @default("ACTIVO")
  documentosPresentados DocumentoPresentado[]
  entregasObtenidas     EntregaRealizada[]
  familiarScout         FamiliarScout[]
  pagosRealizados       Pago[]
  fechaCreacion         DateTime              @default(now())
  fechaActualizacion    DateTime              @updatedAt
  user                  User?

  @@index([equipoId])
}

model Documento {
  id                  Int                   @id @default(autoincrement())
  uuid                String                @unique
  nombre              String
  vence               Boolean
  completable         Boolean
  documentoPresentado DocumentoPresentado[]
}

model DocumentoPresentado {
  id                Int       @id @default(autoincrement())
  uuid              String    @unique
  documento         Documento @relation(fields: [documentoId], references: [uuid])
  documentoId       String
  scout             Scout?    @relation(fields: [scoutId], references: [uuid])
  scoutId           String?
  uploadId          String?
  fechaPresentacion DateTime  @default(now())
  fechaCreacion     DateTime  @default(now())

  @@index([scoutId, documentoId])
  @@index([documentoId])
}

model Pago {
  id            Int      @id @default(autoincrement())
  uuid          String   @unique
  concepto      String
  monto         Float
  rendido       Boolean  @default(false)
  metodoPago    String
  scout         Scout    @relation(fields: [scoutId], references: [uuid])
  scoutId       String
  fechaPago     DateTime
  fechaCreacion DateTime @default(now())

  @@index([scoutId])
}

model Familiar {
  id                 Int             @id @default(autoincrement())
  uuid               String          @unique
  nombre             String
  apellido           String
  fechaNacimiento    DateTime
  dni                String
  sexo               String
  localidad          String
  direccion          String
  mail               String?
  telefono           String?
  nacionalidad       String?
  provincia          String?
  estadoCivil        String?
  fechaCreacion      DateTime        @default(now())
  fechaActualizacion DateTime        @updatedAt
  padreScout         FamiliarScout[]
}

model FamiliarScout {
  id         Int      @id @default(autoincrement())
  familiar   Familiar @relation(fields: [familiarId], references: [uuid])
  familiarId String
  scout      Scout    @relation(fields: [scoutId], references: [uuid])
  scoutId    String
  relacion   String

  @@index([scoutId, familiarId])
  @@index([familiarId])
}

model Equipo {
  id                 Int      @id @default(autoincrement())
  uuid               String   @unique
  nombre             String   @unique
  lema               String?
  rama               String?  @default("CASTORES")
  fechaCreacion      DateTime @default(now())
  fechaActualizacion DateTime @updatedAt
  scout              Scout[]
}

model EntregaRealizada {
  id            Int      @id @default(autoincrement())
  uuid          String   @unique
  scout         Scout    @relation(fields: [scoutId], references: [uuid])
  scoutId       String
  tipoEntrega   String
  fechaEntrega  DateTime @default(now())
  fechaCreacion DateTime @default(now())

  @@index([scoutId])
}
